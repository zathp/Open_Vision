[flake8]
# Flake8 configuration for Open Vision

# Maximum line length
max-line-length = 120

# Exclude directories
exclude =
    .git,
    __pycache__,
    venv,
    TMP,
    Projects,
    build,
    dist,
    *.egg-info

# Ignore specific error codes
ignore =
    # E203: whitespace before ':' (conflicts with black)
    E203,
    # W503: line break before binary operator (PEP 8 allows this)
    W503,
    # E501: line too long (handled by max-line-length)
    E501

# Maximum complexity
max-complexity = 10

# Per-file ignores
per-file-ignores =
    __init__.py:F401
